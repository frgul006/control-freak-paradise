{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CLI",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
