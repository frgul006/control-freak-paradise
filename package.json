{
  "name": "control-freak-paradise",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && sh scripts/clean.sh",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test --color",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "verify": "yarn lint && yarn build && yarn test"
  },
  "devDependencies": {
    "@cfp/cli": "*",
    "@cfp/eslint-config": "*",
    "@commitlint/cli": "17.x",
    "@commitlint/config-conventional": "17.x",
    "husky": "8.x",
    "lint-staged": "13.x",
    "prettier": "latest",
    "turbo": "latest"
  },
  "resolutions": {
    "eslint": "8.38.0"
  },
  "prettier": "@cfp/eslint-config/prettier",
  "engines": {
    "node": ">=16.0.0"
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "3.5.0"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "listr": "^0.14.3"
  }
}
